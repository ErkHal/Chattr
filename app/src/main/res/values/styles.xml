<resources>

    <!-- Main app theme -->
    <style name="Chattr" parent="android:Theme.NoTitleBar" >
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="android:colorPrimary">@color/primary_material_dark</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:textColorPrimary">?android:attr/colorForeground</item>
        <item name="android:colorAccent">@color/accent_material_dark</item>
    </style>

    <!--Other User Chat bubble style -->
    <style name="other_user_chatbubble" parent="android:Theme.NoTitleBar">
        <item name="android:radius">5dp</item>
        <item name="android:background">@drawable/chat_bubble_others</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:width">50dp</item>
        <item name="android:height">20dp</item>

    </style>

    <!-- Own chat bubble -->
    <style name="own_chatbubble" parent="android:Theme.NoTitleBar">
        <item name="android:radius">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:background">@drawable/chat_bubble_own</item>
        <item name="android:width">50dp</item>
        <item name="android:height">20dp</item>

    </style>
</resources>
