<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elitebook.chattr.MainActivity"
    android:background="@color/chat_background">

    <TextView
        android:textColor="@color/textviewFont"
        android:background="@color/conversation_and_message__background"
        android:id="@+id/convoWindow"
        android:layout_width="353dp"
        android:layout_height="488dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintVertical_bias="0.145" />

    <EditText
        android:id="@+id/messageBox"
        android:background="@color/conversation_and_message__background"
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/convoWindow"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/convoWindow"
        app:layout_constraintHorizontal_bias="0.117" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:text="@string/sendButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/convoWindow"
        app:layout_constraintLeft_toRightOf="@+id/messageBox"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/convoWindow" />
</android.support.constraint.ConstraintLayout>
